{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Debug",
      "type": "shell",
      "command": "cmake --build --preset debug",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "Build Debug w/ STL",
      "type": "shell",
      "command": "cmake --build --preset debug-stl",
      "group": {
        "kind": "build"
      },
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "Build Release",
      "type": "shell",
      "command": "cmake --build --preset release",
      "group": {
        "kind": "build"
      },
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "Clear Logs",
      "type": "shell",
      "command": "rm -r ./logs/*",
      "problemMatcher": []
    },
    {
      "label": "valgrind",
      "type": "shell",
      "command": "valgrind",
      "args": [
        "--show-leak-kinds=all",
        "--leak-check=full",
        "--track-origins=yes",
        "${workspaceFolder}/build/SpriteRigger"
      ],
      "dependsOn": ["Build Debug"],
      "problemMatcher": ["$gcc"],
      "presentation": {
        "reveal": "always",
        "clear": true,
        "panel": "dedicated",
        "showReuseMessage": false
      }
    }
  ]
}
